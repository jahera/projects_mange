<!DOCTYPE html>
<html>
  <head>
    <title>Promanage</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#"><%= current_user&.tenant_id ? Apartment::Tenant.current : 'public' %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <% if user_signed_in? %>
                <%= button_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: :false }%>
              <% end %>
          </li>
          <li class="nav-item">
            <%- if !user_signed_in? %>
              <%= link_to "Login", new_user_session_path(:user), class: "nav-link" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Sub-Navbar -->
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="collapse navbar-collapse" id="subNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "New User", new_admin_user_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "New project", new_project_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Users", admin_users_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Projects", projects_path, class: "nav-link active" %>
            </li>
          </ul>
        </div>
      </nav>
    <% end %>
    <div class="container mt-4">
      <%= yield %>
    </div>
  </body>
</html>
