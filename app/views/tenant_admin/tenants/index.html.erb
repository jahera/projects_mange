<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Tenant List</h5>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Tenant Name</th>
                  <th colspan="3">Action</th>
                </tr>
              </thead>
              <tbody>
                <% @tenants.each do |tenant| %>
                  <tr>
                    <td><%= tenant.name %></td>
                    <td></td>
                    <td><%= link_to 'Manage', tenant_admin_dashboard_path(id: tenant) %></td>
                    <td></td>
                  </tr>
                <% end %>
                <!-- Add more rows as needed -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>